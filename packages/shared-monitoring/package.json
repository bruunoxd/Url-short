{
  "name": "@url-shortener/shared-monitoring",
  "version": "1.0.0",
  "description": "Shared monitoring utilities for URL shortener platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:metrics": "node src/tests/runMetricsTests.js",
    "test:observability": "node src/tests/runObservabilityTests.js"
  },
  "dependencies": {
    "express": "^4.18.0",
    "prom-client": "^15.1.0",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "@opentelemetry/sdk-node": "^0.41.0",
    "@opentelemetry/auto-instrumentations-node": "^0.37.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.41.0",
    "@opentelemetry/resources": "^1.15.0",
    "@opentelemetry/semantic-conventions": "^1.15.0",
    "@opentelemetry/sdk-trace-node": "^1.15.0",
    "@opentelemetry/core": "^1.15.0",
    "@opentelemetry/instrumentation-express": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.41.0",
    "@opentelemetry/instrumentation-pg": "^0.35.0",
    "@opentelemetry/instrumentation-redis": "^0.35.0",
    "@opentelemetry/instrumentation-ioredis": "^0.35.0",
    "@opentelemetry/instrumentation-amqplib": "^0.33.0",
    "@opentelemetry/api": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/uuid": "^9.0.1",
    "@types/pino": "^7.0.5",
    "@types/pino-http": "^5.8.1",
    "supertest": "^7.1.3",
    "tsx": "^3.12.0",
    "typescript": "^5.1.0",
    "vitest": "^0.34.0"
  }
}

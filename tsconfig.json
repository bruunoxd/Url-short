{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@url-shortener/shared-types": ["./packages/shared-types/src"],
      "@url-shortener/shared-monitoring": ["./packages/shared-monitoring/src"],
      "@url-shortener/shared-db": ["./packages/shared-db/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}